# Jenkins Environment Configuration for SecureFlow Automaton

# Required environment variables for Jenkins integration
JENKINS_URL=https://jenkins.secureflow.com
JENKINS_ADMIN_PASSWORD=your_secure_admin_password

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Docker Registry
DOCKER_HUB_USERNAME=your_docker_username
DOCKER_HUB_PASSWORD=your_docker_password
DOCKER_REGISTRY=docker.io

# Security Scanning Tools
SONARCLOUD_TOKEN=your_sonarcloud_token
SONARCLOUD_ORGANIZATION=techtyphoon
SONARCLOUD_PROJECT_KEY=TechTyphoon_secure-flow-automaton

SNYK_TOKEN=your_snyk_token
SNYK_ORG=your_snyk_organization

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_DOMAIN=your-team-domain

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Deployment Servers
STAGING_SERVER=staging.secureflow.com
STAGING_SERVER_USER=deploy
STAGING_SERVER_PRIVATE_KEY=your_staging_private_key

PRODUCTION_SERVER=secureflow.com
PRODUCTION_SERVER_USER=deploy
PRODUCTION_SERVER_PRIVATE_KEY=your_production_private_key

# Kubernetes Configuration (if using K8s)
KUBE_CONFIG=your_base64_encoded_kubeconfig
KUBE_NAMESPACE=secureflow

# Application Configuration
NODE_VERSION=18
COVERAGE_THRESHOLD=80
VULNERABILITY_THRESHOLD=high
DEPLOYMENT_STRATEGY=blue-green

# Build Configuration
BUILD_TIMEOUT=60
MAX_CONCURRENT_BUILDS=2
BUILD_RETENTION_DAYS=30
ARTIFACT_RETENTION_DAYS=7

# Security Configuration
ENABLE_SECURITY_SCANNING=true
ENABLE_CONTAINER_SCANNING=true
ENABLE_DEPENDENCY_SCANNING=true
ENABLE_CODE_ANALYSIS=true

# Performance Configuration
ENABLE_PERFORMANCE_TESTING=true
PERFORMANCE_THRESHOLD=95
LOAD_TEST_DURATION=300

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_ENDPOINT=https://metrics.secureflow.com
HEALTH_CHECK_URL=https://secureflow.com/health

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=secureflow-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Feature Flags
ENABLE_PARALLEL_BUILDS=true
ENABLE_MANUAL_APPROVAL=true
ENABLE_ROLLBACK=true
ENABLE_CANARY_DEPLOYMENT=false

# Compliance Configuration
ENABLE_COMPLIANCE_CHECKS=true
COMPLIANCE_REPORT_PATH=compliance-report.json
AUDIT_LOG_ENABLED=true

# Resource Limits
MAX_MEMORY_USAGE=2G
MAX_CPU_USAGE=2
MAX_DISK_USAGE=10G

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secureflow
DB_USER=secureflow_user
DB_PASSWORD=your_db_password

# Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=JSON
LOG_RETENTION_DAYS=90
ENABLE_DEBUG_LOGGING=false

# Testing Configuration
ENABLE_UNIT_TESTS=true
ENABLE_INTEGRATION_TESTS=true
ENABLE_E2E_TESTS=true
ENABLE_SECURITY_TESTS=true
ENABLE_PERFORMANCE_TESTS=true

# Artifact Configuration
ENABLE_ARTIFACT_PUBLISHING=true
ARTIFACT_REPOSITORY=https://nexus.secureflow.com
ARTIFACT_RETENTION_POLICY=30d

# Quality Gates
QUALITY_GATE_ENABLED=true
MIN_CODE_COVERAGE=80
MAX_TECHNICAL_DEBT=5
MAX_DUPLICATED_LINES=3

# Deployment Configuration
BLUE_GREEN_ENABLED=true
CANARY_ENABLED=false
ROLLING_UPDATE_ENABLED=false
HEALTH_CHECK_TIMEOUT=300
DEPLOYMENT_TIMEOUT=600

# Rollback Configuration
AUTO_ROLLBACK_ENABLED=true
ROLLBACK_TIMEOUT=300
ROLLBACK_ON_FAILURE=true

# Notification Configuration
NOTIFY_ON_SUCCESS=true
NOTIFY_ON_FAILURE=true
NOTIFY_ON_UNSTABLE=true
NOTIFY_ON_FIRST_SUCCESS=true
NOTIFY_ON_FIRST_FAILURE=true

# Additional Security Settings
ENABLE_SIGNED_COMMITS=true
ENABLE_BRANCH_PROTECTION=true
ENABLE_REQUIRED_REVIEWS=true
ENABLE_DISMISS_STALE_REVIEWS=true
ENABLE_REQUIRE_CODE_OWNER_REVIEWS=true

# Pipeline Configuration
PIPELINE_TIMEOUT=3600
STAGE_TIMEOUT=1800
STEP_TIMEOUT=600
RETRY_COUNT=3
PARALLEL_EXECUTION=true

# Cache Configuration
ENABLE_BUILD_CACHE=true
CACHE_SIZE=5G
CACHE_RETENTION_DAYS=7

# Custom Variables (add your own)
CUSTOM_VAR_1=value1
CUSTOM_VAR_2=value2
